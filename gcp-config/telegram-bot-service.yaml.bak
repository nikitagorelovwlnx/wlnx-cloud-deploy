apiVersion: serving.knative.dev/v1
kind: Service
metadata:
  name: wlnx-telegram-bot
  namespace: default
  annotations:
    run.googleapis.com/ingress: internal
    run.googleapis.com/execution-environment: gen2
spec:
  template:
    metadata:
      annotations:
        autoscaling.knative.dev/maxScale: "1"
        autoscaling.knative.dev/minScale: "0"
        run.googleapis.com/cpu-throttling: "true"
        run.googleapis.com/memory: "128Mi"
        run.googleapis.com/cpu: "200m"
    spec:
      containerConcurrency: 10
      timeoutSeconds: 300
      containers:
      - name: telegram-bot
        image: europe-west1-docker.pkg.dev/wlnx-473304/wlnx-docker-repo/wlnx-telegram-bot:latest
        ports:
        - name: http1
          containerPort: 8080
        env:
        - name: NODE_ENV
          value: "production"
        - name: PORT
          value: "8080"
        - name: DATABASE_URL
          value: "postgresql://wlnx_user:wlnx_password_2024@/wlnx?host=/cloudsql/wlnx-473304:europe-west1:wlnx-postgres"
        - name: TELEGRAM_BOT_TOKEN
          value: "8333194739:AAGNb5E4NwwmdP7rhYQlvR6jrTBsS87H9W8"
        - name: API_BASE_URL
          value: "https://wlnx-api-server-wlnx-473304.a.run.app/api"
        - name: WEBHOOK_URL
          value: "https://wlnx-api-server-wlnx-473304.a.run.app/api/webhook/telegram"
        resources:
          limits:
            cpu: "200m"
            memory: "128Mi"
